<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_vectr"
    tools:context=".FacultyInformation">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="24sp"
        android:text="Faculty Name"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_above="@+id/linear"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="44dp"
        android:elevation="20dp"
        android:transitionName="myImage"
        app:srcCompat="@drawable/ashwinmakwana" />

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:elevation="30dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="18sp"
            android:text="Assistant Professor M.E. C.E. | Ph.D  Area of Expertise: Cloud Computing, Computer Network.  Area of Research: Cloud Computing.  o	Riteshpatel.Ce@Charusat.Ac.In o	Phone No:5114."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#f2f2f2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/BlogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="30dp"
            android:layout_toStartOf="@+id/textView13"
            android:clickable="true"
            android:elevation="30dp"
            android:focusable="true"
            app:srcCompat="@drawable/ic_writing"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/EmailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:layout_toEndOf="@+id/textView13"
            android:clickable="true"
            android:elevation="30dp"
            android:focusable="true"
            app:srcCompat="@drawable/ic_gmail"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:text="" />

    </RelativeLayout>



</RelativeLayout>