<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_vectr"
    android:fitsSystemWindows="true"
    tools:context=".LabOccupancy">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="24sp"
        android:text="Lab Vacancy"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/labImage"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_workspace" />

    <Spinner
        android:id="@+id/slotspinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/labImage"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:elevation="13dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/dayspinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/labImage"
        android:background="@drawable/shape"
        android:elevation="13dp"
        android:textAlignment="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slotspinner"
        android:layout_marginTop="35dp" />

</RelativeLayout>